<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".Admin.Categorias.CategoriaActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/yasai"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/abel"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:text="Categorias"
        android:textColor="@color/YasaiColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elige la opcion que deseas realizar:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:fontFamily="@font/abel"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:layout_marginBottom="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/btnAñadir"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:elevation="15dp"
            android:background="@drawable/btn_semicircle"
            app:cornerRadius="50dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AÑADIR"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/btnEditar"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:elevation="15dp"
            android:background="@drawable/btn_semicircle"
            app:cornerRadius="50dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="EDITAR"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/btnEliminar"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:elevation="15dp"
            android:background="@drawable/btn_semicircle"
            app:cornerRadius="50dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ELIMINAR"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>