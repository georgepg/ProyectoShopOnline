<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyectoparalelo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoParalelo">
        <activity android:name=".LogIn.ForgotActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Admin.Categorias.EliminarCategoriaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Admin.Categorias.AnyadirCategoriaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Admin.Categorias.CategoriaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Admin.AdminActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DescriptionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CartaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LogIn.RegistrarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LogIn.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".NavActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LogIn.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ProyectoParalelo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>

    </application>

</manifest>